{{ ansible_managed | ansible.builtin.comment }}
---
services:
  nginx:
    image: {{ nginx_docker_image }}
    container_name: nginx
    restart: unless-stopped
    logging:
      options:
        max-size: "100m"
        max-file: "10"
      driver: json-file
    network_mode: host
    volumes:
      - {{ nginx_docker_path }}/default.conf:/etc/nginx/conf.d/default.conf:ro
      - {{ nginx_docker_path }}/tls.crt:/tls.crt:ro
      - {{ nginx_docker_path }}/tls.key:/tls.key:ro
      - /etc/localtime:/etc/localtime:ro
